{
  "driver": {
    "browser": "chrome",
    "remote_url": "http://localhost:4444/wd/hub",
    "wait_time": 10,
    "page_load_wait_time": 10,
    "_options": ["incognito"],
    "options": [
      "headless", "start-maximized",
      "window-size=1920,1080","disable-dev-shm-usage",
      "no-sandbox", "disable-gpu"],

    "capabilities": {},
    "version": "latest",
    "experimental_options": [
      {
        "useAutomationExtension": false
      },
      {
        "excludeSwitches": [
          "enable-automation"
        ]
      }
    ],
    "extension_paths": []
  },
  "logging": {
    "pylog_level": "info",
    "screenshots_on": false
  },
  "viewport": {
    "maximize": true,
    "width": 1440,
    "height": 900,
    "orientation": "portrait"
  }
}